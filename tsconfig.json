{
	"exclude": [],
	"compilerOptions": {
		"target": "es2018",
		"lib": [
			"es2019",
			"dom"
		],
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*/src"
			]
		},
		"composite": true,
		"declaration": true,
		"outDir": ".",
		"declarationDir": ".",
		"noEmitOnError": true,
		"noErrorTruncation": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	}
}
